package ui;

import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JButton;

public class Knopje extends JButton implements ActionListener{
	private String name;
	private GraphicalUserInterface graph;
	public Knopje(String name, GraphicalUserInterface graph){
		this.name = name;
		this.graph = graph;
		this.addActionListener(this);
	}

	@Override
	public void actionPerformed(ActionEvent e) {
		graph.getTextFieldContent();
	}
}
